   "source": [
    "def findMaxSubArray(A = [-2,1,-3,4,-1,2,1,-5,4]):\n",
    "    max_sum = 0  \n",
    "    max_start = cur_end =0\n",
    "    cur_sum = 0\n",
    "    for i in A:\n",
    "        cur_end += 1\n",
    "        if cur_sum > 0:\n",
    "            cur_sum += i\n",
    "\n",
    "        else:\n",
    "            cur_start = cur_end\n",
    "            cur_sum = i\n",
    "\n",
    "        if cur_sum > max_sum:\n",
    "            max_sum = cur_sum\n",
    "            max_start = cur_start-1\n",
    "            max_end = cur_end \n",
    "\n",
    "    return A[max_start:max_end]"
   ]
  },
